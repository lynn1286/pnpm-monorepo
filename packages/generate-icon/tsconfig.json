{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "outDir": "lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "declarationDir": "lib/types",
    "jsx": "react"
  },
  "include": ["src/**/*", "bin/index.ts"],
  "exclude": ["node_modules"]
}
